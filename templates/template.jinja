<body>
<div id='container'>

<header>
<a href='/'>
<img src='https://farm6.staticflickr.com/5813/20476814090_97752519fb_o.jpg' class='header'></img>
</a>
</header>

{% block content %}{% endblock %}

<nav>
<h2>Posts & Updates</h2>
<ul>
{% for e in navigation %}
    {% if loop.index <= archive_cutoff %}
    {% if e['url'] != '/index/' %}
    <li>
    {% if e['filename'] == filename %}
    <strong>
    <a href="{{ e['url'] }}">{{ e['title'] }}</a>
    </strong>
    {% else %}
    <a href="{{ e['url'] }}">{{ e['title'] }}</a>
    {% endif %}
    </li>
    {% endif %}
    {% endif %}
{% endfor %}
    <li>
    {% if filename == 'archive' %}
    <strong>
    <a href="{{ archive_url }}">Archive</a>
    </strong>
    {% else %}
    <a href="{{ archive_url }}">Archive</a>
    {% endif %}
    </li>
</ul>
</nav>

